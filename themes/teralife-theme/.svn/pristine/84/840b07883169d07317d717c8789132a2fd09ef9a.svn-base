@import "compass";
@import "mixins";

$colorBackground: #F5F5F5;

.aui .dockbar {
	z-index: 1031;
}

.aui .dockbar-split .dockbar .navbar-inner .nav-account-controls {
	right: 0.2em;
}

.aui .signed-out .dockbar.navbar .nav > li > a {
    margin: 0;
    padding: 13px 10px;
}

.aui .signed-out #navigation .nav {
	margin-right: 81px;
}

.aui .dockbar .navbar-inner .nav > li, .aui .dockbar.navbar .nav > li > a:hover, .aui .dockbar .nav li.dropdown .dropdown-menu {
	background: none repeat scroll 0 0 #62c000;
	border-bottom: 1px solid #FFF;
}

.aui .dockbar.navbar .nav > li > a:hover {
	border: none;
}

.aui #navigation .navbar-inner {
    background: none repeat scroll 0 0 #f6f6f6;
}

.logo img {
	padding: 5px 40px;
}

.aui .brand a, .aui .brand a:hover {
	color: #FFF;
	text-shadow: none;
}

.aui #navigation .navbar-inner li a {
    color: #245503;
    font-weight: 600;
    font-size:16px;
}

.aui #navigation .nav li.active a, .aui #navigation .nav li.open > a {
    background: #62c000;
    color:#FFF;
    /*border-bottom: 2px solid #FB0000;*/
}

.aui .service-desc .btn-primary {
	background-image: linear-gradient(to bottom, #54aaff, #62c000);
}

.aui #navigation .nav > li > a {
	padding: 15px 15px 16px;
}

#wrapper {
    padding: 4em 0em 0;
}

#footer .row-fluid, #content {
	padding: 0em 1em;
}

 .signed-in #wrapper {
    padding-top: 102px;
}

.aui #footer {
	background: #f6f6f6;
    border-top: 2px solid #FB0000;
    padding-top: 10px;
	text-align: left;
}

.aui #footer .copyrights {
	border-top: 1px solid lightgrey;
	padding:5px;
}

.aui #footer li {
	list-style: outside none none;
}

.aui #footer .socialsicons ul, .aui #footer ul{
	margin: 0px;
}

.aui #footer .socialsicons li {
	display: inline-block;
}

li.socials-icons {
	line-height: 30px;
	padding-left: 4px;
}

.socials-icons a, .socials-icons a:hover {
	background-color: #62c000;
	border: 2px solid lightgray;
	border-radius: 50%;
	color: white;
	float: left;
	font-size: 18px;
	height: 30px;
	width: 30px;
}

.aui .control-group {
	margin-bottom: 10px;
}

.a-portlet .input-prepend {
	margin-bottom: 0px;
}
